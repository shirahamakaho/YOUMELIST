<div class="col-lg-4 col-md-12">
  <div class="card mb-3">
    <div class="card-header" style="background-color:#67a7cc">
      <span class="text-white h4"><i class="fas fa-portrait mr-1"></i>Profile</span>
    </div>
    <div class="card-body">
      <div class="card-title">
        <%= image_tag user.get_profile_image(100,100),class:"rounded-circle"; %>
        <p class="mt-1"><%= user.name %></p>
      </div>
      <div class="card-subtitle border-top">
        <p class="mt-4"><%= user.introduction %></p>
      </div>
      <% if user_signed_in? && user.id == current_user.id %>
      <div class="card-text border-top">
        <i class="fas fa-heart mt-3" style="color:#ff7f7f"></i> <%= link_to "いいねしたコメント",favorites_user_path(user),class:"text-secondary" %>
        </br>
        <i class="fas fa-cog"></i> <%= link_to "プロフィール編集",edit_user_path(user.id),class:"text-secondary" %>
        <%= render partial: 'user/shared/flash' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card border-0 mb-3">
    <div class="card-body">
      <div class="card-title border-bottom">
        <i class="far fa-clipboard"></i> きろく
      </div>
      <div class="card-text">
        <p><i class="fas fa-star"></i> ユメ : <%= user.lists.count %>コ</p>
        <p><i class="fas fa-comment-dots"></i> コメント : <%= user.comments.count %>コ</p>
        <p><i class="fas fa-heart"></i> いいねした : <%= user.favorites.count %>コ</p>
      </div>
    </div>
  </div>
</div>
