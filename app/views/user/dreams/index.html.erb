<div class="container">
<div class="row">
  <p>みんなの新しいユメ</p>
</div>

<div class="row justify-content-center">
  <%= form_with url:search_path,method: :get do |f| %>
  <%= f.text_field :word %>
  <%= f.hidden_field :range,:value => Dream %>
  <%= f.hidden_field :search,:value => "pertial_match" %>
  <%= f.submit "search!" %>
  <% end %>
</div>

<div class="row">
  <%= link_to "新しい順",dreams_path(latest: "true") %>
  <%= link_to "古い順",dreams_path(old: "true") %>
  <!--%= link_to "なかま順",dreams_path(user_count: "true") %>-->
</div>

<div class="row">
  <div class="col-3">
    <p>新着コメント</p>
  </div>

  <div class="col-9">
    <div class="row">
      <% @dreams.each do |dream| %>
        <%= link_to dream_path(dream.id) do %>
          <%= dream.id %>
          <%= dream.content %>
        <% end %>
        M<%= dream.users.count %>
        C<%= dream.comments.count %>
        <% if user_signed_in? %>
        <%= form_with model:@list,url:lists_path,method: :post do |f| %>
        <%= f.hidden_field:dream_id,:value => dream.id %>
        <%= f.hidden_field:user_id,:value => current_user.id %>
        <%= f.submit "list in" %>
        <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

</div>