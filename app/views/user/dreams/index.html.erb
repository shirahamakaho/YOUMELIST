<div class="container">

  <div class="row justify-content-center my-2">
    <p>みんなの新しいユメ<i class="fas fa-star"></i></p>
  </div>
  <div class="row justify-content-center">
    <% @latestdream.each do |dream| %>
    <div class="card mx-2" style="width:12rem;">
      <div class="card-body">
        <div class="card-title">
          <%= dream.content %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

<div class="row justify-content-center my-5">
  <%= form_with url:search_path,method: :get do |f| %>
  <i class="fas fa-search"></i>
  <%= f.text_field :word,placeholder:"キーワードを入力"%>
  <%= f.hidden_field :range,:value => Dream %>
  <%= f.hidden_field :search,:value => "pertial_match" %>
  <%= f.submit "search!" %>
  <% end %>
</div>

<div class="row">

  <div class="col-3">
    <p>新着コメント</p>
  </div>

  <div class="col-9">
    <div class="row">
      <%= link_to "新しい順",dreams_path(latest: "true") %>
    <%= link_to "古い順",dreams_path(old: "true") %>
    <!--%= link_to "なかま順",dreams_path(user_count: "true") %>-->
    </div>
    <div class="row">
      <% @dreams.each do |dream| %>
      <div class="card my-2 mx-2" style="width:12rem;">
        <div class="card-body">
          <h6 class="card-title">
            <%= link_to dream_path(dream.id) do %>
            <%= dream.content %>
            <% end %>
          </h6>
        <div class="card-text row">
          <div class="col">
            <span><i class="fas fa-user"></i><%= dream.users.count %></span>
            <span><i class="fas fa-comments"></i><%= dream.comments.count %></span>
          </div>
          <div class="col">
            <% if user_signed_in? %>
              <%= form_with model:@list,url:lists_path,method: :post do |f| %>
              <%= f.hidden_field:dream_id,:value => dream.id %>
              <%= f.hidden_field:user_id,:value => current_user.id %>
              <%= f.submit nil %>
              <i class="fas fa-plus"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
