<div class="container my-3">
  <div class="row justify-content-center text-center">

    <div class="col-lg-5 text-left">
      <h3>新規ユーザー登録</h3>

      <%= form_with model:@user,url:user_registration_path do |f| %>
        <%= render "user/shared/error_messages", resource: resource %>

      <div class="col-lg">
        <%= f.label :ユーザーネーム %><br>
        <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control" %>
      </div>

      <div class="col-lg mt-3">
        <%= f.label :メールアドレス %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
      </div>

      <div class="col-lg mt-3">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br>
        <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
      </div>

      <div class="col-lg mt-3">
        <%= f.label :"パスワード(確認用)" %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
      </div>

      <div class="col-lg mt-3">
        <%= f.submit "登録する",class:"btn text-white",style:"background-color:#67a7cc" %>
        <%= link_to "やめる",root_path,class:"btn btn-secondary" %>
      </div>
    </div>
  <% end %>

  <div class="col-lg-2 py-5">
    <%= image_tag "new.png",size:"200x200" %>
  </div>

  </div>
</div>