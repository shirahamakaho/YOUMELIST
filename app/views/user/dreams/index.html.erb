<div class="container" style="background-color:#afeeee">
  <div class="row justify-content-center my-4 py-4">
    <p>みんなの新しいユメ<i class="fas fa-star"></i></p>
  </div>
  <div class="row justify-content-center">
    <% @latestdream.each do |dream| %>
    <div class="card m-2" style="width:16rem;">
      <div class="card-body">
        <div class="card-title">
          <%= dream.content %>
        </div>
        <div class="card-text">
          <i class="fas fa-user"></i><span class="ml-1"><%= dream.users.count %></span>
          <i class="fas fa-comments"></i><span class="ml-1"><%= dream.comments.count %></span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center my-5">
    <div class="form-inline">
      <%= form_with url:search_path,method: :get do |f| %>
      <%= f.text_field :word,placeholder:"キーワードを入力",class:"form-control form-control-lg"%>
      <%= f.hidden_field :range,:value => Dream %>
      <%= f.hidden_field :search,:value => "pertial_match" %>
      <%= button_tag type: "submit",class:"btn btn-lg text-white",style:"background-color:#ff7f7f" do %>
      <i class="fas fa-search"></i>search
      <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="row" style="background-color:#f6f6f6">
<div class="container">
  <div class="row justify-content-center">
    <div class="col-7 offset-3">
      <%= link_to "新しい順",dreams_path(latest: "true") %>
      <%= link_to "古い順",dreams_path(old: "true") %>
      <!--%= link_to "なかま順",dreams_path(user_count: "true") %>-->
    </div>
  </div>

  <div class="row justify-content-center">

    <div class="col-3">
      <div class="card">
        <div class="card-body">
          <h5>最近コメントが届いたユメ</h5>
          <% @latestcomment.each do |comment| %>
          <%= link_to dream_path(comment.dream.id) do %>
          <%= comment.dream.content %><br>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-7">
      <div class="row">
        <% @dreams.each do |dream| %>
        <div class="card mb-2 ml-2" style="width:16rem;">
          <div class="card-body">
            <h6 class="card-title">
              <%= link_to dream_path(dream.id) do %>
              <%= dream.content %>
              <% end %>
            </h6>
            <div class="card-text">
              <i class="fas fa-user"></i><span class="ml-1"><%= dream.users.count %></span>
              <i class="fas fa-comments"></i><span class="ml-1"><%= dream.comments.count %></span>
              <% if user_signed_in? %>
                <%= form_with model:@list,url:lists_path,method: :post do |f| %>
                <%= f.hidden_field:dream_id,:value => dream.id %>
                <%= f.hidden_field:user_id,:value => current_user.id %>
                  <%= button_tag type: "submit",class:"btn" do %>
                  <i class="fas fa-plus"></i>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>

      </div>
    </div>
</div>
