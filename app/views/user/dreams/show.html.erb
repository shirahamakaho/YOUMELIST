    <div class="container my-5">
      <div class="row">

        <div class="col-4">
          <div class="card">

            <div class="card-header" style="background-color:#afeeee">
              <h4><i class="fas fa-star"></i><%= @dream.content %></h4>
            </div>
            <div class="card-body">
              <div class="card-title">
                <p>最新コメント何日前</p>
              </div>
              <h1><i class="fas fa-user"></i><%= @dream.users.count %></h1>
              <h1><i class="fas fa-comments"></i><%= @dream.comments.count %></h1>
              </div>
      </div>

      <div class="card">
        <div class="card-header" style="background-color:#40e0d0">
        <p><i class="fas fa-user"></i>なかま</p>
        </div>
        <div class="card-body">
      <% @dream.users.each do |user| %>
      <%= image_tag user.get_profile_image(80,80),class:"mt-3 rounded-circle"; %>
      <%= link_to user_path(user.id) do %>
      <%= user.name %>
      <% end %>
      <% end %>
      <%= link_to "もっと見る",dreams_path %>
      </div>
      </div>
    </div>

    <div class="col-8">
      <div class="card">
        <div class="card-body">

        <p><i class="fas fa-pen"></i>コメントを残す</p>
        <div class="row align-items-center">
          <div class="col auto">
            <%= form_with(model:[@dream,@comment], method: :post) do |f| %>
            <%= f.text_area :comment,class:"form-control" %>
          </div>
        </div>
          <%= f.hidden_field :dream_id, value: @dream.id %>
        <div class="col auto mt-2">
          <%= f.submit "コメントする",class:"form-control btn text-white",style:"background-color:#ff7f7f" %>
        </div>
        <% end %>
      <p><i class="fas fa-comments mt-4"></i>みんなのコメント</p>
      <% @comments.each do |comment| %>

      <div class="card mt-2">
        <div class="card-body">
          <div class="card-title">
            <%= comment.user.name %>
            <%= comment.created_at %><br>
          </div>
          <div class="card-text">
            <%= comment.comment %>
          </div>
        </div>
      <div style="background-color:#afeeee" class="card-footer">
        <% if comment.favorited?(current_user) %>
          <%= link_to dream_comment_favorites_path(@dream,comment.id),method: :delete do %>
          <span style="color:#ff7f7f"><i class="fas fa-heart"></i></span>
          <% end %>
        <% else %>
          <%= link_to dream_comment_favorites_path(@dream,comment.id),method: :post do %>
          <span style="color:#ff7f7f"><i class="far fa-heart"></i></span>
          <% end %>
        <% end %>
        <%= comment.favorites.count %>件のイイネ
        <% if comment.user.id == current_user.id %>
        <!--%= link_to "edit",dream_path(@dream,comment.id) %>-->
        <!--comment.idを渡してコメントフォームに編集するコメントを表示-->
        <%= link_to "edit",dream_path(@dream,comment.id) %>
        <%= link_to "delete",dream_comment_path(@dream,comment.id),method: :delete %><br>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
  </div>
  </div>
  </div>

</div>
</div>
