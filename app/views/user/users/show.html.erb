<div class="container">

  <div class="row justify-content-center mt-3">
    <div class="col-3">
      <p><%= @user.name %></p>
      <p><%= @user.introduction %></p>
      <% if @user.id == current_user.id %>
      <p><%= link_to "♡comments",favorites_user_path(@user) %></p>
      <p><%= link_to "edit profile",edit_user_path(@user.id) %></p>
      <% end %>
      <p>ユメ:<%= @user.lists.count %>コ</p>
      <p>コメント数:<%= @user.comments.count %></p>
    </div>

    <div class="col-9">
      <div class="card">
        <div style="background-color:#efffff" class="card-header">
          <div class="row justify-content-between">
            <p>
              <span class="h3 px-2">YOUMELIST</span> by <%= @user.name %>
            </p>
            <div class="px-2">
              <% if @user.id == current_user.id %>
                <%= form_with model:@newdream,url:dreams_path,method: :post do |f| %>
                <%= f.text_field:content %>
                <%= f.submit class:"text-white btn btn-outline btn-light" %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <table class="table table-sm">
      <tbody>
        <% @lists.each do |list| %>
        <tr>
          <td>
          <%= link_to dream_path(list.dream.id) do %>
            <%= list.dream.content %><br>
          <% end %>
          </td>
          <% if @user.id == current_user.id %>
            <td>
            <%= link_to "list out",list_path(list),method: :delete %><br>
            </td>
          <% end %>
          </tr>
        <% end %>
        </tbody>
    </table>
    </div>
  </div>

</div>