<div class="container">
  <div class="row justify-content-center my-3">

    <%= render "profile",user: @user %>

    <div class="col-lg-8 col-md-12">
      
      <%= render "dream_form",user: @user,newdream: @newdream %>
      
      <div class="card">
        <div class="card-body">
          <div class="card-title border-bottom pl-3">
            <h4><i class="fas fa-heart mt-3" style="color:#ff7f7f"></i> Comments</h4>
          </div>

          <ul class="list-group list-group-flush">
            <% @favorite_comments.each do |comment| %>
            <li class="list-group-item d-flex justify-content-between">
              <p class="text-dark text-truncate"><%= comment.comment %></p>
              <%= link_to dream_path(comment.dream.id) do %>
              <p class="text-secondary">on <%= comment.dream.content %> </p>
              <% end %>
            </li>
            <% end %>
            </ul>
        </div>
      </div>
    </div>
  </div>
</div>
