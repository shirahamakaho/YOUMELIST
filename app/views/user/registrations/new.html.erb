<div class="container my-3">
  <div class="row justify-content-center text-center">

    <div class="card">
      <div class="card-header text-white" style="background-color:#67a7cc">
        新規登録
      </div>
      <div class="card-body">
        <div class="card-text p-3">
          <%= render partial: 'user/shared/flash' %>
          <%= form_with model:@user,url:user_registration_path do |f| %>
          <%= render "user/shared/error_messages", resource: resource %>
            <div class="row">
              <label><i class="fas fa-user-edit" style="color:#ffdc00"></i> ユーザーネーム</label>
              <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control" %>
            </div>
            <div class="row mt-3">
              <label><i class="fas fa-envelope" style="color:#ffdc00"></i> メールアドレス</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
            </div>
            <div class="row mt-3">
              <label>
                <i class="fas fa-lock" style="color:#ffdc00"></i>
                パスワード<% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
                <% end %>
              </label>
              <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
            </div>
            <div class="row mt-3">
              <label><i class="fas fa-lock" style="color:#ffdc00"></i> パスワード(確認用)</label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
            </div>
            <div class="row mt-2">
              <%= f.submit "登録する",class:"form-control btn text-white",style:"background-color:#67a7cc" %>
            </div>
          <% end %>
          <div class="col mt-2">
            <%= link_to "トップにもどる",root_path,class:"btn text-secondary",style:"color:#67a7cc" %>
            <%= link_to "ログインページ",new_user_session_path,class:"btn",style:"color:#67a7cc" %>
          </div>
        </div>

      </div>
    </div>