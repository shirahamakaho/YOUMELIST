<div class="container my-3">
  <div class="row justify-content-center text-center">

    <div class="card">
      <div class="card-header text-white" style="background-color:#67a7cc">
        ログイン
      </div>
      <div class="card-body">
        <div class="card-text p-3">
          <%= render partial: 'user/shared/flash' %>
          <%= form_with model:@user,url:user_session_path do |f| %>
            <div class="row">
              <label><i class="fas fa-envelope" style="color:#ffdc00"></i> メールアドレス</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
            </div>
            <div class="row mt-3">
              <label><i class="fas fa-unlock" style="color:#ffdc00"></i> パスワード</label>
              <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
            </div>
            <div class="row mt-2">
              <%= f.submit "ログインする",class:"form-control btn text-white",style:"background-color:#67a7cc" %>
            </div>
          <% end %>
          <div class="col mt-2">
            <%= link_to "トップにもどる",root_path,class:"btn text-secondary",style:"color:#67a7cc" %>
            <%= link_to "新規登録ページ",new_user_registration_path,class:"btn",style:"color:#67a7cc" %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>