<div class="container">

  <div class="row justify-content-center mt-3">
    <div class="col-3">
      <div class="card">
        <div class="card-body">
      <p><%= @user.name %></p>
      <p><%= @user.introduction %></p>
      <% if @user.id == current_user.id %>
      <p><i class="fas fa-heart" style="color:#ff7f7f"></i><%= link_to "comments",favorites_user_path(@user) %></p>
      <p><i class="fas fa-cog"></i><%= link_to "edit profile",edit_user_path(@user.id) %></p>
      <% end %>
      <p><i class="fas fa-star"></i>ユメ:<%= @user.lists.count %></p>
      <p><i class="fas fa-comment-dots"></i>コメント数:<%= @user.comments.count %></p>
    </div>
    </div>
    </div>

    <div class="col-7">
      <div class="card">
        <div style="background-color:#afeeee" class="card-header">
          <div class="row justify-content-between">
            <p>
              <span class="h3 px-2 text-dark">LIST</span> by <%= @user.name %>
            </p>
            <div class="px-2">
              <% if @user.id == current_user.id %>
                <%= form_with model:@newdream,url:dreams_path,method: :post do |f| %>
                <%= f.text_field:content %>
                <%= f.submit class:"text-white btn btn-outline btn-light" %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <ul class="list-group list-group-flush text-center">
        <% @lists.each do |list| %>
          <li class="list-group-item d-flex justify-content-between">
          <%= link_to dream_path(list.dream.id) do %>
            <span class="text-dark">
              <%= list.dream.content %>
            </span>
          <% end %>
          <% if @user.id == current_user.id %>
            <span>
              <%= link_to list_path(list),method: :delete do %>
              <span style="color:#ff7f7f"><i class="fas fa-times"></i></span>
              <% end %>
            </span>
          <% end %>
          </li>
        <% end %>
    </div>
    </div>
  </div>

</div>