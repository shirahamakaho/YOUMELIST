<div class="card border-0 mt-3">
  <div class="card-body">
    <div class="card-title border-bottom">
      <h6>最近コメントが届いたユメ</h6>
    </div>
    <% @latestcomment.each do |comment| %>
      <%= link_to dream_path(comment.dream.id) do %>
      <div class="text-truncate text-dark"><i class="fas fa-comment-dots"></i><%= comment.dream.content %></div>
      <% end %>
      <span class="text-muted">(<%= time_ago_in_words(comment.created_at) %>前)</span><br>
    <% end %>
  </div>
</div>