<!DOCTYPE html>
<html>
  <head>
    <title>YOUMELIST</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="text-dark" style="background-color:#f5f9f9">

    <header>
      <nav class="navbar border-bottom" style="background-color:#67a7cc">
        <div class="container justify-content-between">
          <div>
            <%= image_tag"logo-w.PNG",size:"100x25" %>
          </div>
          <div>
            <%= link_to root_path do %>
            <i class="fas fa-home" style="color:#ffffff"></i>
            <span class="text-white mr-2">TOP</span>
            <% end %>
            <% if user_signed_in? %>
              <%= link_to user_path(current_user.id) do %>
              <i class="fas fa-list-alt" style="color:#ffffff"></i>
              <span class="text-white mr-2">MY PAGE</span>
              <% end %>
              <%= link_to dreams_path do %>
              <i class="fas fa-star" style="color:#ffffff"></i>
              <span class="text-white mr-2">DREAM</span>
              <% end %>
              <%= link_to destroy_user_session_path,method: :delete do %>
              <i class="fas fa-sign-out-alt" style="color:#ffffff"></i>
              <span class="text-white mr-2">LOG OUT</span>
              <% end %>
            <% end %>
          </div>
        </div>
      </nav>
    </header>

  <main>
    <%= yield %>
  </main>

  <footer class="text-white p-5" style="background-color:#67a7cc">
    <div class="row justify-content-center">
      <h4>YOUMELIST</h4>
    </div>
    <div class="row justify-content-center mt-2">
      <p>イラスト：Loose Drawing</p>
    </div>
  </footer>
  </body>
</html>
